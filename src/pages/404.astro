---
import BaseLayout from "@/layouts/BaseLayout.astro";
---
<BaseLayout>
    <div class="flex justify-center items-center h-full py-24">
        <div class="text-center">
            <h1 class="text-6xl font-display mb-4 transition-all duration-500 hover:scale-105">404</h1>
            <p class="text-lg text-zinc-600 mb-8 transition-colors duration-300 hover:text-black">Page not found</p>
            <a href="/" class="inline-flex items-center px-6 py-3 border border-black bg-black text-white rounded-full hover:bg-white hover:text-black transition-all duration-300 hover:shadow-lg">
                Go Home
            </a>
        </div>
    </div>
</BaseLayout>
